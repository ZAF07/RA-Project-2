<%- include('../partials/header.ejs') %> 
<%- include('../partials/profileNav.ejs') %> 

<div class="container-fluid d-flex flex-column">
  <div class="row">


      <section class="col ">
        <!-- <div class=" "> -->
          <div class="container-fluid">
            <div class="col-sm-12 text-center">
              <div class="pt-2 mt-2 pt-lg-1 mt-lg-1 pl-sm-3 pr-sm-3 pl-md-5 pr-md-5">
                <h4 class="hero-heading mt-sm-5 pt-sm-5 pt-md-2 mt-md-2">Welcome <%= email %>
                </h4>
              </div>
              
            </div>
          </div>
        <!-- </div> -->
      </section>

      <section class="col-sm-12 mt-3 pt-3">
       
      <!-- Message after sending interest for jobs -->
            <% if (typeof interestSuccessMsg === 'string') { %>
                    <div class="container-fluid profile-nudge-msg">
                      <div class="col-sm-12 text-center">
                        <div class="pt-2 mt-2 pt-lg-1 mt-lg-1 pl-sm-2 pr-sm-2 pl-md-5 pr-md-5">
                          <small class="alert alert-success"><%= interestSuccessMsg %></small>
                        </div>
                      </div>
                    </div>
                  </section>
            <% } %>


                <% if (isActive === false) { %>
                  <section class="col-sm-12 mt-3 pt-3">
       
                    <div class="container-fluid profile-nudge-msg">
                      <div class="col-sm-12 text-center">
                        <div class="pt-2 mt-2 pt-lg-1 mt-lg-1 pl-sm-2 pr-sm-2 pl-md-5 pr-md-5">
                          <small class="alert alert-warning text-wrap d-block">Let's go! Plenty of jobs put there! Don't miss out!

                          </small>
                        </div>
                      </div>
                    </div>
                  </section>
                <% } %>

                

      <section class="col-sm-12 mt-2 pt-2 ">
        <div class="container-fluid mt-3 pt-3">
          <div class="row">
            <div class="col-sm-2"></div>
              <div class="col-sm-8 text-center mt-sm-1 pt-sm-1 mt-md-3 p-md-3">
            <!-- <div class="cards"> -->
              <div>
                <h3>Dashboard</h3>
              </div>
                <tbody>
                  <tr>
                      <div class="table-responsive">
                  <table class="table table-striped table-sm">
                    <thead>
                      <tr>
                        <th>Description</th>
                        <th>Total</th>
      
                      </tr>
                      <!-- DASHBOARD -->
                    </thead>
                        <td>Total Jobs Taken</td>
                        <td><% if (typeof jobsTaken === 'object') { %>
                              <%= jobsTaken.length %> 
                            <% } %></td>

                  </tr>

                    <td>Total Jobs Posted</td>
                    <td><% if (typeof jobsPosted === 'object') { %>
                          <%= jobsPosted.length %> 
                        <% } %></td>

                  </tr>
                  <tr>

                    <td>Jobs Pending approval (Posted)</td>
                    <td><% if (typeof jobsPendingPosted === 'object') { %>
                          <%= jobsPendingPosted.length %> 
                        <% } %></td>

                  </tr>
                  <tr>

                    <td>Jobs Pending approval (Applied)</td>
                    <td><% if (typeof jobsPendingApplied === 'object') { %>
                          <%= jobsPendingApplied.length %> 
                        <% } %>
                    </td>

                  </tr>
                  <tr>

                    <td>Total Spent</td>
                    <td>$<%= totalSpent %> </td>

                  </tr>
                  <tr>

                    <td>Total Earned</td>
                    <td>$<%= totalEarned %></td>

                  </tr>
                  </table>
                </tbody>
      <!-- </div> -->
            </div>
            <div class="col-sm-2"></div>
          </div>

          </div>
        </div>
      </section>


  </div>
</div>



<%- include('../partials/footer.ejs') %> 