<%- include('../partials/header.ejs') %> 
<%- include('../partials/nav.ejs') %> 
<% const date = new Date() %> 


   <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-5">Welcome !</h1>
      <p class="lead">Join us and start posting or taking jobs anytime.</p>
    </div>
  </div>



  <div class="container-fluid mt-sm-1 pt-sm-1 mt-md-2 pt-md-2 form-div-register">
    <div class="row">
      <div class="col-sm-2"></div>
      <div class="col-sm-8 p-5">
        <form class="form-signin mt-1 pt-1 text-center" method="POST" action="/register">
          <% if (typeof registerErr === 'string') { %>
           <small class="alert alert-danger mb-3 pb-3 d-block"><%= registerErr %></small>
          <% } %>
          <h1 class="h3 mb-3 font-weight-normal">Join us now!</h1>
          <label for="inputEmail" class="sr-only">Email address</label>
          <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required="" autofocus="" name="email">
          <label for="inputPassword" class="sr-only">Password</label>
          <input type="password" id="inputPassword" class="form-control" placeholder="Password" required="" name="password">
  
          <button class="btn btn-lg btn-block mt-2 pt-3 sign-in-btn" type="submit">Let's Go!</button>
          <p class="mt-5 mb-3 text-muted">Â© <%= date.getFullYear() %></p>
        </form>
      </div>
      <div class="col-sm-2"></div>
    </div>
  </div>



